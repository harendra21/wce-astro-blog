---

interface Props {
	title: string;
	description: string;
	image: string;
	slug: string
}

const { title, description, image, slug,  } = Astro.props;
const dirctus_url = import.meta.env.DIRECTUS_URL;

---

<a href={`/blog/${slug}`} class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-6 gap-8 items-center">
      <div class="md:col-span-4">
        <h2 class="text-2xl font-bold mb-4">{title}</h2>
        <p class="text-gray-600 text-lg">
          {description.substring(0, 90)}
          {description.length > 90 ? "..." : ""}
        </p>
      </div>
      {image && (
        <div class="md:col-span-2 flex justify-center">
          <div class="overflow-hidden transform hover:scale-110 transition-transform duration-300 ease-in-out">
            <img 
              src={dirctus_url+`/assets/${image}?width=200`} 
              alt={title} 
              class="max-w-full h-auto"
            />
          </div>
        </div>
      )}
    </div>
  </a>
  <hr>